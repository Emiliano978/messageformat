{
  "name": "messageformat-monorepo",
  "description": "Messageformat monorepo",
  "private": true,
  "license": "MIT",
  "homepage": "https://messageformat.github.io/",
  "repository": "messageformat/messageformat",
  "directories": {
    "doc": "docs",
    "example": "example"
  },
  "scripts": {
    "clean": "git clean -fdx -e node_modules -e config/husky/_",
    "build": "lerna run build --no-private --stream",
    "build:examples": "lerna run build --scope *-example --stream",
    "predocs": "lerna run extract-api --stream",
    "docs": "api-documenter markdown -i tmp/ -o docs/api/",
    "postdocs": "node scripts/set-api-docs-frontmatter docs/api/",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "prettier": "prettier --write .",
    "start": "node -i -r ./scripts/start.js",
    "prepare": "husky install config/husky",
    "pretest:browsers": "cd test && rollup -c",
    "test:browsers": "mocha --parallel --jobs 5 --require test/browser/browserstack-fixtures.js --timeout 120000 test/browser/tests/",
    "test:chrome": "npm run pretest:browsers && mocha-selenium-bridge -b chrome test/browser/test.html",
    "test:firefox": "npm run pretest:browsers && mocha-selenium-bridge -b firefox test/browser/test.html",
    "test:serve": "npm run pretest:browsers && serve",
    "test": "jest"
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true,
    "trailingComma": "none"
  },
  "dependencies": {
    "@messageformat/cli": "file:packages/cli",
    "@messageformat/convert": "file:packages/convert",
    "@messageformat/core": "file:packages/core",
    "@messageformat/date-skeleton": "file:packages/date-skeleton",
    "@messageformat/loader": "file:packages/webpack-loader",
    "@messageformat/number-skeleton": "file:packages/number-skeleton",
    "@messageformat/parser": "file:packages/parser",
    "@messageformat/react": "file:packages/react",
    "@messageformat/runtime": "file:packages/runtime",
    "rollup-plugin-messageformat": "file:packages/rollup-plugin"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@microsoft/api-documenter": "^7.11.0",
    "@microsoft/api-extractor": "^7.12.0",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "@types/chai": "^4.2.14",
    "@types/jest": "^27.4.0",
    "@types/moo": "^0.5.3",
    "@types/react": "^17.0.0",
    "@types/react-test-renderer": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^27.4.6",
    "browserstack-local": "^1.4.8",
    "chai": "^4.2.0",
    "common-tags": "^2.0.0-alpha.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.1.0",
    "husky": "^7.0.4",
    "intl-list-format": "^1.0.3",
    "jest": "^27.4.7",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "lerna": "^3.22.1",
    "lodash.merge": "^4.6.2",
    "memfs": "^3.2.0",
    "mocha": "^9.2.0",
    "mocha-selenium-bridge": "^0.2.3",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.34.0",
    "rollup-plugin-babel": "^4.4.0",
    "selenium-webdriver": "^4.0.0-alpha.5",
    "serve": "^13.0.2",
    "serve-handler": "^6.1.3",
    "tmp-promise": "^3.0.2",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
  }
}
